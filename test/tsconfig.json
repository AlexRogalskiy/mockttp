{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "strict": true,
        "strictPropertyInitialization": false, // Fails with typed-error
        "lib": [
            "dom",
            "es2015"
        ]
    },
    "compileOnSave": true,
    "buildOnSave": true,
    "include": [
        "../custom-typings/*.d.ts",
        "**/*.ts",
        "../node_modules/@types/**/*.d.ts"
    ],
    "filesGlob": [
        "../custom-typings/*.d.ts",
        "**/*.ts",
        "../node_modules/@types/**/*.d.ts"
    ]
}
