{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "outDir": "./dist",
        "declaration": true,
        "sourceMap": true,
        "strict": true,
        "strictPropertyInitialization": false, // Fails with typed-error
        "lib": [
            "dom",
            "es2015",
            "scripthost"
        ]
    },
    "compileOnSave": true,
    "buildOnSave": true,
    "include": [
        "custom-typings/*.d.ts",
        "src/**/*.ts",
        "node_modules/@types/**/*.d.ts"
    ]
}
